<h1>New Category</h1>

<% @category.errors.full_messages.each do |message| %>
	<div><%= message %></div>
<%end%>

<%= form_with model: @category do |form| %>
	
	<%= form.label :name %>
	<%= form.text_field :name %><br>


	<%= form.label :description %>
	<%= form.text_area :description %>
	<br>

	<%= form.label :active %>
	<%= form.check_box :active %>
	<br>
	<%= form.submit %>
<% end %>
